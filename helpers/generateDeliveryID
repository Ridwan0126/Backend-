const db = require('../config/db'); 

const generateDeliveryId = async () => {
    const date = new Date();
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');
    const dateString = `${year}${month}${day}`;

    try {
        const [rows] = await db.query(
            `SELECT COUNT(*) as count FROM yuk_buang WHERE delivery_id LIKE ?`,
            [`YB-${dateString}%`]
        );

        const count = rows[0]?.count + 1 || 1;
        const countString = String(count).padStart(4, '0'); 
        return `YB-${dateString}-${countString}`;
    } catch (error) {
        console.error('Error generating delivery ID:', error);
        throw new Error('Failed to generate delivery ID');
    }
};

module.exports = generateDeliveryId;